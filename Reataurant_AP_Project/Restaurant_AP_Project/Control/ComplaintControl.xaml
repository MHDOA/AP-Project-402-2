<UserControl x:Class="Restaurant_AP_Project.Control.ComplaintControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Restaurant_AP_Project.Control"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Border BorderBrush="Black" BorderThickness="1" Margin="5">
            <StackPanel Margin="10">
                <TextBlock x:Name="txtUsername" FontWeight="Bold" FontSize="16"/>
                <TextBlock x:Name="txtRestaurantName" Margin="0 5 0 0"/>
                <TextBlock x:Name="txtDateTime" Margin="0 5 0 0"/>
                <TextBlock x:Name="txtTitle" FontWeight="Bold" Margin="0 5 0 0"/>
                <CheckBox x:Name="chkAnswered" Content="Answered" Margin="0 5 0 0"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>

    
    