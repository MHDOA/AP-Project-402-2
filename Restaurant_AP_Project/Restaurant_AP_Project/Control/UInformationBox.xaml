<UserControl x:Class="Restaurant_AP_Project.Control.UInformationBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Restaurant_AP_Project.Control"
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="200">
    <Grid>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
            <TextBox MaxLength="{Binding Max_Length}" Margin="0 0 10 0" FontSize="12" Text="{Binding BoxText}" HorizontalAlignment="Right" VerticalAlignment="Center" x:Name="txtBox" IsEnabled="False"/>
            <TextBlock FontWeight="Bold" Foreground="Black" Text="{Binding BlockText}" HorizontalAlignment="Right" VerticalAlignment="Center" FontSize="13"/>
        </StackPanel>
    </Grid>
</UserControl>
