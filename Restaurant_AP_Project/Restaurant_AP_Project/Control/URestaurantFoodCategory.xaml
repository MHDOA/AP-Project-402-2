<UserControl x:Class="Restaurant_AP_Project.Control.URestaurantFoodCategory"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Restaurant_AP_Project.Control"
             mc:Ignorable="d" 
             d:DesignHeight="70" d:DesignWidth="800">
    <Border BorderBrush="LightGray" BorderThickness="1">
        <Grid>
            <StackPanel VerticalAlignment="Center" Orientation="Horizontal" HorizontalAlignment="Right">
                <TextBlock x:Name="txtCategory" VerticalAlignment="Center" HorizontalAlignment="Right" FontSize="20" Margin="0 0 15 0"></TextBlock>
                <Image Margin="10" Source="/Asset/Element/DefaultPicture.png" Width="50"/>
            </StackPanel>
        </Grid>
    </Border>

</UserControl>
