<UserControl x:Class="Restaurant_AP_Project.Control.URestaurantCommentHistory"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Restaurant_AP_Project.Control"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="800">
    <Border BorderBrush="LightGray" BorderThickness="1">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="90"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            
                <Button x:Name="btnEditComment" Background="HotPink" VerticalAlignment="Center" Width="70" FontSize="15" Height="35" Margin="10">ویرایش</Button>
                <TextBlock Grid.Column="1" x:Name="txtComment" FontSize="15" TextWrapping="Wrap"/>
        </Grid>
    </Border>

</UserControl>
